---
import Template from "../template/Template.astro";
import Article from "../components/article/Article.astro";
import Breadcrumb from "../components/Breadcrumb.astro";

const articulos = [
    {
        id: 1,
        titulo: 'Construcción de un intérprete con Rust 1',
        lenguaje: 'Rust',
        duracion: 5,
        autor: 'Brayan Téllez',
        descripcion: 'Dedicamos un tiempo a la primera parte de la implementación'
    },
    {
        id: 2,
        titulo: 'Construcción de un intérprete con Rust 2',
        lenguaje: 'Rust',
        duracion: 5,
        autor: 'Brayan Téllez',
        descripcion: 'Hablamos sobre todos los objetos que contiene nuestro intérprete'
    },
    {
        id: 3,
        titulo: 'Implementación del protocolo MPEG-DASH desde 0',
        lenguaje: 'JavaScript',
        duracion: 5,
        autor: 'Brayan Téllez',
        descripcion: ''
    }
];
const routes = [
  { text: 'Brayan Téllez', href: '/' },
  { text: 'Blog', href: '/blog' }
];
---
<Template includes={['article']}>
    <Breadcrumb routes={routes}/>
    <section id="main">
        {
            articulos.map( articulo => <Article {...articulo}/> )
        }
    </section>
</Template>