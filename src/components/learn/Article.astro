---
import Youtube from "/assets/icons/Youtube.svg?raw";
import Github from "/assets/icons/GitHub.svg?raw";
import MX from "/assets/flags/mx.svg?raw";
import CH from "/assets/flags/ch.svg?raw";
import UK from "/assets/flags/uk.svg?raw";

import type { ILearnAbstract } from "../../interface/Learn";
import type { ILearnTranslation } from "../../interface/AppLangs";

const { title, lang, themes, resume, git, id }: ILearnAbstract & { translate: ILearnTranslation } = {
    title: '',
    resume: '',
    git: '',
    id: '',
    lang: '',
    themes: [],
    translate: {
        playlist: '',
        repository: '',
        title: ''
    },
    ...Astro.props
};
---
<article class="container">
    <h2>{title}</h2>
    <p set:html={resume}></p>
